<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pluslatestmemes.MainIssues.ActivitiesFromMenu.MemeGenerator"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Genereate your own meme here"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:id="@+id/btn.pickimage.meme"
                android:background="@drawable/button_shape_submit"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="pick image"
                android:layout_gravity="center"/>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear.meme.generator">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv.meme.carrier"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/image.meme.generator"
                    android:src="@color/lightgray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv.meme.carrier.bottom"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:textSize="16sp"/>
            </LinearLayout>
            <EditText
                android:hint="Enter your top text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/shapeedt_meme"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/edt.meme.text.generator"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:hint="Enter your bottom text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/shapeedt_meme"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/edt.meme.text.bottom.generator"
                />
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:id="@+id/btn.set.meme"
                android:background="@drawable/button_shape_submit"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="set text"
                android:layout_gravity="center"/>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:id="@+id/btn.generate.meme"
                android:background="@drawable/button_shape_submit"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="generate"
                android:layout_gravity="center"/>


            <com.google.android.gms.ads.AdView
                android:layout_marginTop="20dp"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView.generator"
                android:layout_gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="MEDIUM_RECTANGLE"
                android:layout_alignParentEnd="true"
                ads:adUnitId="@string/banner"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
